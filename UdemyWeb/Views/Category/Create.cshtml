@model Category

<form method="post">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Create a new category</h2>
            <hr />
        </div>
        <div asp-validation-summary="All"></div>
        <div class="row mb-3 p-1">
            <label class="p-0" asp-for="Name"></label>
            <input type="text" asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="row mb-3 p-1">
            <label class="p-0" asp-for="DisplayOrder"></label>
            <input type="number" asp-for="DisplayOrder" class="form-control" />
            <span asp-validation-for="DisplayOrder" class="text-danger"></span>
        </div>

        <div class="row">
            <div class="col-6 col-md-3">
                <button type="submit" class="btn btn-primary form-control">Create</button>
            </div>
            <div class="col-6 col-md-3">
                <a asp-controller="Category" asp-action="Index" class="btn btn-outline-secondary border form-control">Back to list</a>
            </div>
        </div>


        
        
    </div>
</form>

@section Scripts{
    @{
    <partial name="_ValidationScriptsPartial.cshtml" />
    }
}